# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here

# TickTick OAuth Configuration
TICKTICK_CLIENT_ID=your-ticktick-client-id
TICKTICK_CLIENT_SECRET=your-ticktick-client-secret
TICKTICK_REDIRECT_URI=http://localhost:8000/callback

# Database
DATABASE_URL=sqlite:///./ultrathink.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL for OAuth redirects (where your web app is running)
FRONTEND_URL=http://localhost:5173

# AI Model Configuration
AI_MODEL=anthropic/claude-3.5-sonnet  # or openai/gpt-4, etc.
AI_TEMPERATURE=0.7

# Session Secret (generate a random string)
SECRET_KEY=your-secret-key-here-generate-random-string
